{
  "manifest_version": 3,
  "name": "AI Page Scanner (MVP)",
  "description": "Scans the current page and returns basic content stats (no AI yet).",
  "version": "0.0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}